@page
@model AlDentev2.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Przywracanie hasła";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="mb-4 mt-4 text-center">Resetowanie hasła</h4>

            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-success mb-4">
                    @Model.StatusMessage
                </div>
            }

            <p class="text-center">Wprowadź adres e-mail powiązany z Twoim kontem, aby otrzymać link do resetowania hasła.</p>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Wprowadź email" autocomplete="email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-dark w-100">Wyślij link do resetowania</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}