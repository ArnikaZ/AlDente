@page
@model AlDentev2.Pages.ShirtsModel
@{
    ViewData["Title"] = "Koszulki";
}

<div class="container mt-5">
    <div class="row ">
        <div class="col-sm-4 offset-sm-2 mt-5">
            <div id="carouselControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/shirt-1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/4.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/shirt-2.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselControls" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </a>
                <a class="carousel-control-next" href="#carouselControls" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </a>
            </div>
        </div>
        <div class="col-sm-4 text-center align-content-center">
            <h6>AL DENTE T-SHIRT WHITE</h6>
            <p>199 PLN </p>
            <p>Rozmiar:</p>
            <button class="btn btn-outline-dark" type="button">S</button>
            <button class="btn btn-outline-dark" type="button">M</button>
            <button class="btn btn-outline-dark" type="button">L</button>
            <button class="btn btn-outline-dark" type="button">XL</button><br />
            <button class="btn btn-dark mt-4" type="button">Dodaj do koszyka</button>
        </div>


        <div class="col-sm-4 offset-sm-2 my-3">
                <div id="carouselControls2" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/shirt-black.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/shirt-black4.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/shirt-black3.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselControls2" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </a>
                    <a class="carousel-control-next" href="#carouselControls2" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </a>
                </div>
        </div>
        <div class="col-sm-4 text-center align-content-center">
            <h6>AL DENTE T-SHIRT BLACK</h6>
            <p>199 PLN </p>
            <p>Rozmiar:</p>
            <button class="btn btn-outline-dark" type="button">S</button>
            <button class="btn btn-outline-dark" type="button">M</button>
            <button class="btn btn-outline-dark" type="button">L</button>
            <button class="btn btn-outline-dark" type="button">XL</button><br />
            <button class="btn btn-dark mt-4" type="button">Dodaj do koszyka</button>
        </div>

       
    </div>
</div>