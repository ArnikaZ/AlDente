@page
@model AlDentev2.Pages.EditProfileModel
@{
    ViewData["Title"] = "Edytuj profil";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-5">
            <h4 class="mb-4">Edytuj profil</h4>

            @if (Model.StatusMessage != null)
            {
                <div class="alert @(Model.StatusMessage.Contains("sukcesem") ? "alert-success" : "alert-danger") mb-4">
                    @Model.StatusMessage
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Input.FirstName" class="form-label">Imię</label>
                            <input asp-for="Input.FirstName" class="form-control" placeholder="Wprowadź imię" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.LastName" class="form-label">Nazwisko</label>
                            <input asp-for="Input.LastName" class="form-control" placeholder="Wprowadź nazwisko" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label">Numer telefonu</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Wprowadź numer telefonu" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-dark me-2">Zapisz zmiany</button>
                            <a asp-page="/CustomerProfile" class="btn btn-outline-dark">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}