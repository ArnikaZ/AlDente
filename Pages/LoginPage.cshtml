@page
@model AlDentev2.Pages.LoginPageModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="container mt-5">
    <!-- NAV z zakładkami -->
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-5">
            @if (Model.StatusMessage != null)
            {
                <div class="alert alert-secondary mb-4">
                    @Model.StatusMessage
                </div>
            }
            <ul class="nav nav-tabs justify-content-center" id="loginTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.ActiveTab == "login" ? "active" : "")"
                            id="login-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#login-content"
                            type="button"
                            role="tab"
                            aria-controls="login-content"
                            aria-selected="@(Model.ActiveTab == "login" ? "true" : "false")">
                        Zaloguj się
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.ActiveTab == "register" ? "active" : "")"
                            id="register-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#register-content"
                            type="button"
                            role="tab"
                            aria-controls="register-content"
                            aria-selected="@(Model.ActiveTab == "register" ? "true" : "false")">
                        Stwórz konto
                    </button>
                </li>
            </ul>

            <!-- Zawartość zakładek -->
            <div class="tab-content" id="loginTabsContent">

                <!-- Zakładka: Zaloguj się -->
                <div class="tab-pane fade @(Model.ActiveTab == "login" ? "show active" : "") p-3"
                     id="login-content"
                     role="tabpanel"
                     aria-labelledby="login-tab">
                    <form method="post" asp-page-handler="Login" data-ajax="false">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="LoginInput.Email" class="form-label">Adres e-mail</label>
                            <input asp-for="LoginInput.Email" name="LoginInput.Email" class="form-control" placeholder="Wprowadź e-mail" autocomplete="email">
                            <span asp-validation-for="LoginInput.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LoginInput.Password" class="form-label">Hasło</label>
                            <input asp-for="LoginInput.Password" name="LoginInput.Password" class="form-control" type="password" placeholder="Wprowadź hasło" autocomplete="current-password">
                            <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="LoginInput.RememberMe" name="LoginInput.RememberMe" class="form-check-input" id="rememberMe">
                            <label asp-for="LoginInput.RememberMe" class="form-check-label">Zapamiętaj mnie</label>
                        </div>

                        
                            <button type="submit" class="btn btn-dark w-100 mb-2">Zaloguj się</button>
                        <p><a asp-page="/ForgotPassword" style="color: black" >Zapomniałem hasła</a></p>
                        
                    </form>

                    <div class="mt-3">
                        <p class="text-center">lub zaloguj się za pomocą:</p>
                        <form method="post" asp-page-handler="ExternalLogin" class="d-flex justify-content-center gap-3 my-2">
                            <input type="hidden" name="provider" value="Google" />
                            <button type="submit" class="btn btn-outline-dark">
                                <i class="bi bi-google"></i> Google
                            </button>
                        </form>
                        <form method="post" asp-page-handler="ExternalLogin" class="d-flex justify-content-center gap-3 mt-3">
                            <input type="hidden" name="provider" value="Facebook" />
                            <button type="submit" class="btn btn-outline-dark">
                                <i class="bi bi-facebook"></i> Facebook
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Zakładka: Stwórz konto -->
                <div class="tab-pane fade @(Model.ActiveTab == "register" ? "show active" : "") p-3"
                     id="register-content"
                     role="tabpanel"
                     aria-labelledby="register-tab">
                    <form method="post" asp-page-handler="Register" data-ajax="false">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="RegisterInput.Email" class="form-label">Adres e-mail</label>
                            <input asp-for="RegisterInput.Email" name="RegisterInput.Email" class="form-control" placeholder="Wprowadź e-mail" autocomplete="email">
                            <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterInput.Password" class="form-label">Hasło</label>
                            <input asp-for="RegisterInput.Password" name="RegisterInput.Password" class="form-control" type="password" placeholder="Wprowadź hasło" autocomplete="new-password">
                            <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegisterInput.ConfirmPassword" class="form-label">Powtórz hasło</label>
                            <input asp-for="RegisterInput.ConfirmPassword" name="RegisterInput.ConfirmPassword" class="form-control" type="password" placeholder="Powtórz hasło" autocomplete="new-password">
                            <span asp-validation-for="RegisterInput.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <button type="submit" class="btn btn-dark w-100">Stwórz konto</button>
                        <div class="my-3">
                            <p>Nie otrzymałeś e-maila potwierdzającego? <a asp-page-handler="ResendConfirmation" asp-route-email="@Model.LoginInput.Email ">Wyślij ponownie</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}