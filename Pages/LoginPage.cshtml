@page
@model AlDentev2.Pages.LoginPageModel
@{
    ViewData["Title"] = "Moje konto";
}


<div class="container mt-5">
    <!-- NAV z zakładkami -->
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-5">
            <ul class="nav nav-tabs justify-content-center" id="loginTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active"
                            id="login-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#login-content"
                            type="button"
                            role="tab"
                            aria-controls="login-content"
                            aria-selected="true">
                        Zaloguj się
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link"
                            id="register-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#register-content"
                            type="button"
                            role="tab"
                            aria-controls="register-content"
                            aria-selected="false">
                        Stwórz konto
                    </button>
                </li>
            </ul>

            <!-- Zawartość zakładek -->
            <div class="tab-content" id="loginTabsContent">

                <!-- Zakładka: Zaloguj się -->
                <div class="tab-pane fade show active p-3"
                     id="login-content"
                     role="tabpanel"
                     aria-labelledby="login-tab">
                    <form>
                        <div class="mb-3">
                            <label for="loginUsernameOrEmail" class="form-label">
                                Adres e-mail
                            </label>
                            <input type="text"
                                   class="form-control"
                                   id="loginUsernameOrEmail"
                                   placeholder="Wprowadź e-mail">
                        </div>
                        <div class="mb-3">
                            <label for="loginPassword" class="form-label">Hasło</label>
                            <input type="password"
                                   class="form-control"
                                   id="loginPassword"
                                   placeholder="Wprowadź hasło">
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Zapamiętaj mnie</label>
                        </div>
                        <button type="submit" class="btn btn-dark">Zaloguj się</button>
                    </form>
                </div>

                <!-- Zakładka: Stwórz konto -->
                <div class="tab-pane fade p-3"
                     id="register-content"
                     role="tabpanel"
                     aria-labelledby="register-tab">
                    <form id="registerForm">
                        <div class="mb-3">
                            <label for="registerEmail" class="form-label">
                                Adres e-mail
                            </label>
                            <input type="text"
                                   class="form-control"
                                   id="registerEmail"
                                   placeholder="Wprowadź e-mail">
                        </div>
                        <div class="mb-3">
                            <label for="registerPassword" class="form-label">
                                Hasło
                            </label>
                            <input type="password"
                                   class="form-control"
                                   id="registerPassword"
                                   placeholder="Wprowadź hasło">
                        </div>
                        <div class="mb-3">
                            <label for="registerPassword2" class="form-label">
                                Powtórz hasło
                            </label>
                            <input type="password"
                                   class="form-control"
                                   id="registerPassword2"
                                   placeholder="Powtórz hasło">
                        </div>
                        
                        <button type="submit" class="btn btn-dark">Stwórz konto</button>
                        <script>
                            function onClick(e) {
                              e.preventDefault();
                              grecaptcha.enterprise.ready(async () => {
                                const token = await grecaptcha.enterprise.execute('6LeIv8MqAAAAACggo_Ey6hGPgO39ByeaQaNsIdiH', {action: 'LOGIN'});
                              });
                            }
                        </script>
                        
                    </form>
                </div>

            </div>

        </div>
   
    </div>
</div>